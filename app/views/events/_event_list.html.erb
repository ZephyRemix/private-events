<% event.each do |event| %>
    <div>
        <h2><%= event.name %></h2>
        <p>Date: <%= event.date %></p>
        <p>Location: <%= event.location %></p>
        <i>Organizer id: <%= event.creator.id %></i>
        <% unless event.attendees.include?(current_user) %>
            <%= form_with(url: event_event_attendees_path(event), method: :post, local: true) do %>
                <%= submit_tag "Attend Event"%>
            <% end %>
        <% else %>
            <p>You are already attending this event.</p>
        <% end %>
    </div>
<% end %>